<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/activity_list_setting_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="랭킹 목록 설정"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_margin_top"
        android:layout_marginStart="@dimen/app_margin_start" />

    <TextView
        android:id="@+id/activity_list_setting_button_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="뒤로"
        android:gravity="center_vertical"
        android:textSize="30sp"
        android:layout_marginRight="@dimen/app_margin_end"
        android:layout_marginTop="@dimen/app_margin_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/activity_list_setting_division"
        app:layout_constraintTop_toBottomOf="@+id/activity_list_setting_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" />

    <CheckBox
        android:id="@+id/activity_list_setting_checkbox_naver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_division" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="네이버"
        android:textSize="20sp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/activity_list_setting_checkbox_naver"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_division"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:id="@+id/activity_list_setting_linear_naver"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@id/activity_list_setting_checkbox_naver"
        app:layout_constraintBottom_toBottomOf="@id/activity_list_setting_checkbox_naver"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/activity_list_setting_checkbox_daum"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_checkbox_naver" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="다음"
        android:textSize="20sp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/activity_list_setting_checkbox_daum"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_checkbox_naver"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:id="@+id/activity_list_setting_linear_daum"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="@id/activity_list_setting_checkbox_daum"
        app:layout_constraintBottom_toBottomOf="@id/activity_list_setting_checkbox_daum"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/activity_list_setting_checkbox_zum"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_checkbox_daum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="줌"
        android:textSize="20sp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/activity_list_setting_checkbox_zum"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_checkbox_daum"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:id="@+id/activity_list_setting_linear_zum"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="@id/activity_list_setting_checkbox_zum"
        app:layout_constraintBottom_toBottomOf="@id/activity_list_setting_checkbox_zum"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/activity_list_setting_checkbox_google"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_checkbox_zum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="구글"
        android:textSize="20sp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/activity_list_setting_checkbox_google"
        app:layout_constraintTop_toBottomOf="@id/activity_list_setting_checkbox_zum"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:id="@+id/activity_list_setting_linear_google"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="@id/activity_list_setting_checkbox_google"
        app:layout_constraintBottom_toBottomOf="@id/activity_list_setting_checkbox_google"
        android:focusable="true" />

    <Button
        android:id="@+id/activity_list_setting_button_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="완료"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/all_round"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin" />

</androidx.constraintlayout.widget.ConstraintLayout>
